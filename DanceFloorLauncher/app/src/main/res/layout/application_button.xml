<?xml version="1.0" encoding="utf-8"?>

<discofever.dancefloorlauncher.views.BaseLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    >
    <FrameLayout
        android:id="@+id/clickable_region"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="100%"
        app:layout_marginTopPercent="0%"
        app:layout_marginLeftPercent="0%"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/selector_app_button"
        android:clickable="true"
        />
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/button_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_widthPercent="80%"
        app:layout_heightPercent="80%"
        app:layout_marginTopPercent="0%"
        app:layout_marginLeftPercent="10%"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/button_bg_image"
            android:src="@drawable/btn_blue"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="100%"
            app:layout_marginTopPercent="0%"
            app:layout_marginLeftPercent="0%"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <ImageView
            android:id="@+id/icon_image"
            android:src="@drawable/icon"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="80%"
            app:layout_marginTopPercent="11.5%"
            app:layout_marginLeftPercent="11.5%"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.80"
            />

        <ImageView
            android:id="@+id/button_rim_image"
            android:src="@drawable/btn_rim"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="100%"
            app:layout_marginTopPercent="0%"
            app:layout_marginLeftPercent="0%"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </android.support.percent.PercentRelativeLayout>

    <FrameLayout
        android:id="@+id/text_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_widthPercent="85%"
        app:layout_heightPercent="20%"
        app:layout_marginTopPercent="80%"
        app:layout_marginLeftPercent="7.5%"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <discofever.dancefloorlauncher.views.AutoResizeTextView
            android:id="@+id/app_text"
            android:text="Name Of Text Icon Item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            />
    </FrameLayout>


</discofever.dancefloorlauncher.views.BaseLayout>

